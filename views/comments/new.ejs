<% include ../partials/header %>

<h1 style="text-align:center">Add New Comment to <%= campground.name %> </h1>

<div class="container text-center" style="width:30%;margin:30px auto">
<form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="form-horizontal">
        <div class="form-group">
            <textarea rows="4" cols="50" class="form-control" name="comment[text]" placeholder="text"></textarea>
        </div>    
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    <div>
    <a href="/index">Go Back</a>
</form>
</div>


