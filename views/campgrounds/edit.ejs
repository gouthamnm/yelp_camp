
<% include ../partials/header %>

<h1 style="text-align:center">Edit Campground</h1>

<div class="container text-center" style="width:30%;margin:30px auto">
<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" class="form-horizontal">
        <div class="form-group">
            <input type="text" class="form-control" name="campground[name]"  value="<%= campground.name %>">
        </div>    
        <div class="form-group">
            <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
        </div>    
        <div class="form-group">
           <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
        </div>   
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    <div>
    <a href="/index">Go Back</a>
</form>
</div>


<% include ../partials/footer %>
