<% include ../partials/header %>

<h1 style="text-align:center">Create a new campground</h1>

<div class="container text-center" style="width:30%;margin:30px auto">
<form action="/campgrounds" method="POST" class="form-horizontal">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="name">
        </div>    
        <div class="form-group">
            <input type="text" class="form-control" name="image" placeholder="image url">
        </div>    
        <div class="form-group">
           <textarea class="form-control" name="description" placeholder="description"></textarea>
        </div>   
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    <div>
    <a href="/index">Go Back</a>
</form>
</div>


